[Unit]
Description=TinyGhettoBox admin interface
Wants=local-fs.target
After=local-fs.target

[Service]
Environment="PORT=80"
WorkingDirectory=/srv/tinyghettobox
Environment="UI_PATH=/srv/tinyghettobox/admin_interface_ui"
ExecStart=/srv/tinyghettobox/admin_interface_server
Restart=always
RestartSec=20
Type=simple

[Install]
WantedBy=multi-user.target